@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Product Title</label>
            <input asp-for="Title" disabled class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Product Description</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>List Price</label>
            <input asp-for="ListPrice" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Real Price</label>
            <input asp-for="RealPrice" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                    Back
                </a>
            </div>
        </div>
    </div>
</form>