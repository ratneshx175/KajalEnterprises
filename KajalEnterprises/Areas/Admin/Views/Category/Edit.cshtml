@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Category Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" type="number" min="1" max="100" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Back
                </a>
            </div>
        </div>
    </div>
</form>